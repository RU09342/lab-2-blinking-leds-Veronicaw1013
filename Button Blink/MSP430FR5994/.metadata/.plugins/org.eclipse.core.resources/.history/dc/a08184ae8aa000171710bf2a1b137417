#include <msp430.h> 

#define TRUE 1==1

void main (void) {

// Watchdog setup
WDTCTL = WDTPW + WDTHOLD; // stop using the watchdog

// LED initial setup
P1DIR |= BIT0 + BIT1; // ENABLE GREEN AND RED LED

// Button setup
P5DIR &= ~BIT5; // button is an input
P5OUT |= BIT5; // pull-up resistor
P5REN |= BIT5; // resistor enabled

while (TRUE) {

if (P5IN & BIT5) {
P1OUT &= ~BIT0; // Green off
P1OUT |= BIT1; // Red on
} else {
P1OUT &= ~BIT1; // Red off
P1OUT |= GREEN_LED; // Green on
}

}
return;
}
